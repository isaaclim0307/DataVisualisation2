{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/isaaclim0307/DataVisualisation2/main/Death%20rate%20of%20AUS%20and%20MAS.csv"},
    "params": [
        {
          "name": "Country_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Australia",
              "Malaysia"
            ],
            "labels":[
              "Show All",
              "Australia",
              "Malaysia"
            ],
            "name": "Country: "
          }
        }
      ],
    "transform": [
        {"filter": "Country_selection == null || datum.Country == Country_selection"}
    ],
    "mark": {"type": "line"},
    "encoding": {
      "x": {"field": "Year", "title": "Year", "type":"ordinal"},
      "y": {"field": "Deaths_per_1000_People", "title": "Death Rate per 1000 People", "type":"quantitative", "scale":{"domain":[4,7]}},
      "color": {"field": "Country"},
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Deaths_per_1000_People", "type": "quantitative", "title": "Death Rate per 1000 People"}
      ]
    }
}